<div class="flex items-center space-x-2 ml-4">
  <% I18n.available_locales.each do |locale| %>
    <% if locale.to_s == I18n.locale.to_s %>
      <span class="text-sm font-medium text-indigo-600 px-2 py-1 bg-indigo-100 rounded-md"><%= locale.to_s.upcase %></span>
    <% else %>
      <%= link_to locale.to_s.upcase, { locale: locale.to_s }, class: "text-sm font-medium text-gray-500 hover:text-gray-700 px-2 py-1 hover:bg-gray-100 rounded-md transition-colors duration-150" %>
    <% end %>
  <% end %>
</div> 