<div class="bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="max-w-4xl mx-auto bg-white shadow-sm rounded-lg overflow-hidden">
      <div class="px-6 py-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= t('about.title') %></h1>
        
        <div class="space-y-6 text-lg text-gray-600 leading-relaxed">
          <p>
            <%= t('about.bio.intro') %>
          </p>
          
          <p>
            <%= t('about.bio.approach') %>
          </p>
          
          <p>
            <%= t('about.bio.ai_interest') %>
          </p>
          
          <p>
            <%= t('about.bio.website_purpose') %>
          </p>
          
          <p>
            <%= t('about.bio.outdoor') %>
          </p>
        </div>
        
        <div class="mt-10 grid grid-cols-1 sm:grid-cols-3 gap-4 overflow-x-auto">
          <div class="bg-gray-50 p-4 rounded-md text-center flex-shrink-0">
            <%= link_to params[:locale] ? localized_path('workExample') : work_example_path, class: "block" do %>
              <div class="text-indigo-600 text-3xl mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <h3 class="font-semibold"><%= t('about.skills.project_management') %></h3>
            <% end %>
          </div>
          <div class="bg-gray-50 p-4 rounded-md text-center flex-shrink-0">
            <%= link_to params[:locale] ? localized_path('project0') : project0_path, class: "block" do %>
              <div class="text-indigo-600 text-3xl mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="font-semibold"><%= t('about.skills.tech_ai') %></h3>
            <% end %>
          </div>
          <div class="bg-gray-50 p-4 rounded-md text-center flex-shrink-0">
            <div class="text-indigo-600 text-3xl mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="font-semibold"><%= t('about.skills.outdoor_life') %></h3>
          </div>
          <div class="bg-gray-50 p-4 rounded-md text-center flex-shrink-0">
            <%= link_to params[:locale] ? localized_cv_path : cv_path, class: "block" do %>
              <div class="text-indigo-600 text-3xl mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="font-semibold"><%= t('about.skills.cv_link') %></h3>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Passion Section -->
    <div class="max-w-4xl mx-auto bg-white shadow-sm rounded-lg overflow-hidden mt-8">
      <div class="px-6 py-8">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-indigo-100 rounded-md p-3">
            <svg class="h-6 w-6 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0 1 12 21 8.25 8.25 0 0 1 6.038 7.047 8.287 8.287 0 0 0 9 9.601a8.983 8.983 0 0 1 3.361-6.867 8.21 8.21 0 0 0 3 2.48Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 0 0 .495-7.468 3.75 3.75 0 0 0-1.993-1.118 3.75 3.75 0 0 0-1.612 1.118 3.75 3.75 0 0 0 .496 7.468 3.75 3.75 0 0 0 1.611-1.118Z" />
            </svg>
          </div>
          <h2 class="ml-4 text-2xl font-bold text-gray-900"><%= t('about.passion.title') %></h2>
        </div>
        
        <div class="mt-6 space-y-4 text-lg text-gray-600 leading-relaxed">
          <p>
            <%= t('about.passion.bridge') %>
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8 overflow-x-auto">
            <div class="p-4 bg-gray-50 rounded-lg flex-shrink-0">
              <div class="flex items-center mb-3">
                <svg class="h-5 w-5 text-indigo-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
                </svg>
                <h3 class="font-semibold text-gray-800"><%= t('about.passion.innovation.title') %></h3>
              </div>
              <p class="text-base">
                <%= t('about.passion.innovation.description') %>
              </p>
            </div>
            
            <div class="p-4 bg-gray-50 rounded-lg flex-shrink-0">
              <div class="flex items-center mb-3">
                <svg class="h-5 w-5 text-indigo-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                </svg>
                <h3 class="font-semibold text-gray-800"><%= t('about.passion.learning.title') %></h3>
              </div>
              <p class="text-base">
                <%= t('about.passion.learning.description') %>
              </p>
            </div>
            
            <div class="p-4 bg-gray-50 rounded-lg flex-shrink-0">
              <div class="flex items-center mb-3">
                <svg class="h-5 w-5 text-indigo-500 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                </svg>
                <h3 class="font-semibold text-gray-800"><%= t('about.passion.visual_communication.title') %></h3>
              </div>
              <p class="text-base">
                <%= t('about.passion.visual_communication.description') %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 