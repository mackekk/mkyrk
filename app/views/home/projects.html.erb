              <p class="text-gray-600 mb-5 text-sm">
                <%= t('projects.work_example.card_description') %>
              </p>
              <p class="text-sm font-medium text-gray-500">
                <%= t('projects.keyword_label') %>: <span class="text-gray-700"><%= t('projects.work_example.keywords') %></span>
