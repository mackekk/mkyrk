<div class="bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="text-center mb-12">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl"><%= t('projects.title') %></h1>
      <p class="mt-4 text-lg text-gray-600"><%= t('projects.intro') %></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

      <!-- Project 0 - mkyrk website -->
      <a href="/project0" class="block group">
        <div class="bg-white shadow-sm rounded-lg overflow-hidden flex flex-col relative h-full transition-all duration-200 transform group-hover:shadow-md group-hover:-translate-y-1">
          <span class="absolute top-2 right-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <%= t('projects.project_status.ongoing') %>
          </span>
          <div class="p-6 flex-grow">
            <div class="flex items-center mb-3">
              <div class="bg-indigo-100 rounded-full p-2 mr-3">
                <svg class="h-5 w-5 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h2 class="text-xl font-semibold text-gray-800"><%= t('projects.mkyrk.title') %></h2>
            </div>
            <p class="text-gray-600 mb-4 text-sm">
              <%= t('projects.mkyrk.description') %>
            </p>
            <p class="text-sm font-medium text-gray-500">
              <%= t('projects.mkyrk.technologies') %> <span class="text-gray-700"><%= t('projects.mkyrk.tech_list') %></span>
            </p>
          </div>
          <div class="p-4 bg-gray-50 border-t border-gray-200">
            <span class="inline-flex items-center text-indigo-600 font-medium text-sm">
              <%= t('projects.more_info') %> 
              <svg class="ml-1 h-4 w-4 transition-transform group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </span>
          </div>
        </div>
      </a>

      <!-- Project 1 - Python Project -->
      <div class="bg-white shadow-sm rounded-lg overflow-hidden flex flex-col relative h-full cursor-pointer transition-all duration-200 transform hover:shadow-md hover:-translate-y-1">
        <span class="absolute top-2 right-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <%= t('projects.project_status.coming_soon') %>
        </span>
        <div class="p-6 flex-grow">
          <div class="flex items-center mb-3">
            <div class="bg-indigo-100 rounded-full p-2 mr-3">
              <svg class="h-5 w-5 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            <h2 class="text-xl font-semibold text-gray-800"><%= t('projects.python.title') %></h2>
          </div>
          <p class="text-gray-600 mb-4 text-sm">
            <%= t('projects.python.description') %>
          </p>
          <p class="text-sm font-medium text-gray-500">
            <%= t('projects.python.technologies') %> <span class="text-gray-700"><%= t('projects.python.tech_list') %></span>
          </p>
        </div>
        <div class="p-4 bg-gray-50 border-t border-gray-200">
          <span class="inline-flex items-center text-gray-500 text-sm">
            <%= t('projects.more_info_soon') %>
          </span>
        </div>
      </div>

      <!-- Project 2 - The Social Chef -->
      <div class="bg-white shadow-sm rounded-lg overflow-hidden flex flex-col relative h-full cursor-pointer transition-all duration-200 transform hover:shadow-md hover:-translate-y-1">
        <span class="absolute top-2 right-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <%= t('projects.project_status.coming_soon') %>
        </span>
        <div class="p-6 flex-grow">
          <div class="flex items-center mb-3">
            <div class="bg-indigo-100 rounded-full p-2 mr-3">
              <svg class="h-5 w-5 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            </div>
            <h2 class="text-xl font-semibold text-gray-800"><%= t('projects.social_chef.title') %></h2>
          </div>
          <p class="text-gray-600 mb-4 text-sm">
            <%= t('projects.social_chef.description') %>
          </p>
          <p class="text-sm font-medium text-gray-500">
            <%= t('projects.social_chef.technologies') %> <span class="text-gray-700"><%= t('projects.social_chef.tech_list') %></span>
          </p>
        </div>
        <div class="p-4 bg-gray-50 border-t border-gray-200">
          <span class="inline-flex items-center text-gray-500 text-sm">
            <%= t('projects.more_info_soon') %>
          </span>
        </div>
      </div>

    </div>

  </div>
</div> 
</div> 
</div> 
</div> 
</div> 