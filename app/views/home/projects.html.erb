    </div>

    <!-- No projects found message -->
    <div id="no-projects-message" class="hidden text-center py-10">
      <div class="bg-gray-100 rounded-lg p-6 mx-auto max-w-xl">
        <svg class="h-12 w-12 text-gray-400 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('projects.no_projects.title') %></h3>
        <p class="text-gray-500" id="no-projects-text"><%= t('projects.no_projects.message') %></p>
      </div>
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    initializeProjectFilters();
  });

  // Also initialize when Turbo navigates
  document.addEventListener("turbo:load", function() {
    initializeProjectFilters();
  });

  // Function to initialize project filters
  function initializeProjectFilters() {
    const filterButtons = document.querySelectorAll('.project-filter-btn');
    const projectCards = document.querySelectorAll('.project-card');
    const noProjectsMessage = document.getElementById('no-projects-message');
    
    if (!filterButtons.length || !projectCards.length || !noProjectsMessage) return;
    
    // Function to update projects visibility and show/hide message
    function updateProjects(filterValue) {
      console.log('Filtering by:', filterValue);
      let visibleCount = 0;
      
      projectCards.forEach(card => {
        const cardType = card.getAttribute('data-type');
        console.log('Card type:', cardType, 'Filter value:', filterValue);
        
        if (filterValue === 'all' || cardType === filterValue) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });
      
      // Show/hide no projects message
      if (visibleCount === 0) {
        noProjectsMessage.classList.remove('hidden');
      } else {
        noProjectsMessage.classList.add('hidden');
      }
      
      console.log('Visible count:', visibleCount);
    }
    
    // Add click event listeners to filter buttons
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        // Remove active class from all buttons
        filterButtons.forEach(btn => {
          btn.classList.remove('active-filter', 'bg-indigo-100', 'text-indigo-700', 'bg-green-100', 'text-green-700');
          btn.classList.add('text-gray-700');
        });
        
        // Add active class to clicked button with appropriate color based on type
        const buttonType = this.getAttribute('data-button-type');
        
        if (buttonType === 'work') {
          // Green styling for work filter
          this.classList.add('active-filter', 'bg-green-100', 'text-green-700');
        } else {
          // Default indigo styling for other filters
          this.classList.add('active-filter', 'bg-indigo-100', 'text-indigo-700');
        }
        
        this.classList.remove('text-gray-700');
        
        // Get the filter value
        const filterValue = this.getAttribute('data-filter');
        
        // Update projects
        updateProjects(filterValue);
      });
    });
    
    // Initialize with the default filter (all)
    updateProjects('all');
  }
</script> 